---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({ 
    params: { slug: post.id }, 
    props: { entry: post } 
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<BaseLayout 
  title={entry.data.title.length > 42 ? `${entry.data.title.substring(0, 42)}... - ResumeLink` : `${entry.data.title} - ResumeLink`} 
  description={entry.data.description}
  keywords={entry.data.keywords || entry.data.tags?.join(',') || 'blog,resume,CV,career advice'}
>
  <article class="blog-article">
    <header class="blog-header">
      <h1 class="blog-title">{entry.data.title}</h1>
      <div class="blog-meta">
        <span class="author">{entry.data.author || 'ResumeLink Team'}</span>
        <span class="separator">Â·</span>
        <time datetime={entry.data.date.toISOString()}>
          {entry.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
      </div>
    </header>
    
    {entry.data.heroImage && (
      <div class="hero-image">
        <img src={entry.data.heroImage} alt={entry.data.title} />
      </div>
    )}
    
    <section class="blog-content">
      <Content />
    </section>
  </article>

  <style>
    /* Medium-inspired layout */
    .blog-article { 
      max-width: 680px; 
      margin: 0 auto; 
      padding: 3rem 1.5rem 5rem; 
      background: var(--gray-999);
    }
    
    .blog-header { 
      border-bottom: 1px solid var(--gray-850); 
      padding-bottom: 1rem; 
      margin-bottom: 0.5rem; 
    }
    
    .blog-title { 
      font-family: "Times New Roman", Times, serif; 
      font-size: clamp(1.75rem, 1.2rem + 2vw, 2.5rem); 
      line-height: 1.25; 
      margin: 0 0 0.5rem; 
      color: var(--gray-0); 
      font-weight: 600;
      letter-spacing: -0.02em;
    }
    
    .blog-meta { 
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem; 
      color: var(--gray-400);
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }
    
    .author { 
      color: var(--gray-300); 
      font-weight: 500;
    }
    
    .separator { 
      color: var(--gray-600); 
    }
    
    /* Hero image styling */
    .hero-image {
      margin: 0.5rem 0 2rem 0;
      border-radius: 0.5rem;
      overflow: hidden;
    }
    
    .hero-image img {
      width: 100%;
      height: auto;
      display: block;
      object-fit: cover;
    }
    
    /* Content styling */
    .blog-content { 
      font-family: "Times New Roman", Times, serif; 
      font-size: 1.125rem;
      line-height: 1.7;
      color: var(--gray-200);
    }
    
    /* Hide the first H1 in markdown content to avoid duplication with page title */
    .blog-content :global(h1:first-child) {
      display: none;
    }
    
    .blog-content :global(h2) { 
      font-family: "Times New Roman", Times, serif; 
      font-size: 1.5rem;
      font-weight: 600;
      line-height: 1.3;
      margin: 2.5rem 0 1rem; 
      color: var(--gray-0);
      letter-spacing: -0.01em;
    }
    
    .blog-content :global(h3) { 
      font-family: "Times New Roman", Times, serif; 
      font-size: 1.25rem;
      font-weight: 600;
      line-height: 1.4;
      margin: 2rem 0 0.75rem; 
      color: var(--gray-100);
    }
    
    .blog-content :global(p) { 
      margin: 1.5rem 0;
      line-height: 1.7; 
      color: var(--gray-200); 
    }
    
    .blog-content :global(ul), 
    .blog-content :global(ol) { 
      margin: 1.5rem 0;
      padding-left: 1.5rem;
    }
    
    .blog-content :global(li) { 
      margin: 0.5rem 0;
      line-height: 1.6;
    }
    
    .blog-content :global(blockquote) {
      border-left: 3px solid var(--accent-regular);
      margin: 2rem 0;
      padding: 0 1.5rem;
      font-style: italic;
      color: var(--gray-300);
    }
    
    .blog-content :global(code) { 
      background: var(--gray-800); 
      padding: 0.125rem 0.375rem; 
      border-radius: 0.25rem; 
      font-size: 0.9em;
      font-family: 'Monaco', 'Menlo', monospace;
    }
    
    .blog-content :global(pre) { 
      background: var(--gray-900); 
      padding: 1.25rem; 
      border-radius: 0.5rem; 
      overflow-x: auto; 
      margin: 2rem 0;
      border: 1px solid var(--gray-800);
    }
    
    .blog-content :global(pre code) {
      background: none;
      padding: 0;
    }
    
    /* Mobile adjustments */
    @media (max-width: 768px) {
      .blog-article { 
        padding: 2rem 1rem 3rem; 
      }
      
      .blog-title { 
        font-size: clamp(1.5rem, 4vw, 2rem); 
      }
      
      .blog-content { 
        font-size: 1rem; 
      }
      
      .blog-meta {
        flex-wrap: wrap;
        gap: 0.375rem;
      }
      
      .hero-image {
        margin: 0.5rem 0 1.5rem 0;
        border-radius: 0.375rem;
      }
    }
  </style>
</BaseLayout>


